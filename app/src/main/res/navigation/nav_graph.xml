<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home_fragment">

    <fragment
        android:id="@+id/home_fragment"
        android:name="com.goldcompany.apps.koreabike.home.HomeFragment" >
        <action
            android:id="@+id/action_home_fragment_to_search_address_fragment"
            app:destination="@id/search_address_fragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit" />
    </fragment>

    <fragment
        android:id="@+id/search_address_fragment"
        android:name="com.goldcompany.apps.koreabike.search_address.SearchAddressFragment"
        android:label="즐겨찾기" >
        <action
            android:id="@+id/action_search_address_fragment_to_favorite_place_fragment"
            app:destination="@id/favorite_place_fragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit"/>
    </fragment>

    <fragment
        android:id="@+id/favorite_place_fragment"
        android:name="com.goldcompany.apps.koreabike.find_places.favorite.FavoritePlaceFragment" />

</navigation>