<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/seoul_map_fragment_frame"
        tools:context="com.goldcompany.apps.koreabike.seoul.SeoulBikeMapFragment">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.naver.maps.map.MapFragment" />

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexDirection="column">

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="8dp"
                app:flexDirection="row">

                <com.google.android.material.card.MaterialCardView
                    android:theme="@style/AppTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="18dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="3dp"
                    app:layout_alignSelf="center"
                    app:layout_flexGrow="1">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/search_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="10dp"
                        android:background="@android:color/white"
                        android:hint="@string/search_address_hint"
                        android:maxLines="1"
                        android:focusable="false"/>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/search_address_button"
                    android:theme="@style/AppTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search_address_button"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:backgroundTint="?attr/colorPrimary"
                    app:icon="@drawable/ic_search_button"
                    app:layout_alignSelf="center"/>

            </com.google.android.flexbox.FlexboxLayout>

        </com.google.android.flexbox.FlexboxLayout>

    </FrameLayout>
</layout>
