<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.android.apps.seoulpublicbike.bikebottomsheet.ShowBikeDataBottomSheetViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".bikebottomsheet.ShowBikeDataBottomSheet"
        android:orientation="vertical"
        android:padding="8dp">

        <Button
            android:id="@+id/add_favorite_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD"
            android:onClick="addFavoriteButton"/>
        <TextView
            android:id="@+id/station_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.bottomSheetBikeData.stationName}"
            android:textSize="25dp"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/parking_bike"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.bottomSheetBikeData.parkingBike}"
            android:textSize="20dp"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/rack_bike"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.bottomSheetBikeData.rackBike}"
            android:textSize="20dp"
            android:textColor="@android:color/black"/>
    </LinearLayout>
</layout>
