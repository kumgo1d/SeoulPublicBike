<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/seoulBikeMapFragment"
        android:name="com.goldcompany.apps.koreabike.seoul.SeoulBikeMapFragment" >
        <action
            android:id="@+id/action_seoulBikeMapFragment_to_showBikeDataBottomSheet"
            app:destination="@id/showBikeDataBottomSheet" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.goldcompany.apps.koreabike.home.HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_seoulBikeMapFragment"
            app:destination="@id/seoulBikeMapFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit" />
        <action
            android:id="@+id/action_homeFragment_to_favoriteListFragment"
            app:destination="@id/favoriteListFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit" />
    </fragment>
    <fragment
        android:id="@+id/favoriteListFragment"
        android:name="com.goldcompany.apps.koreabike.favoritelist.FavoriteListFragment" />
    <dialog
        android:id="@+id/showBikeDataBottomSheet"
        android:name="com.goldcompany.apps.koreabike.bikebottomsheet.ShowBikeDataBottomSheet"
        android:label="ShowBikeDataBottomSheet" />

</navigation>